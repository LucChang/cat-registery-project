// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cats      Cat[]
}

model Cat {
  id          String   @id @default(cuid())
  name        String
  breed       String?
  color       String?
  gender      String?
  birthDate   DateTime?
  description String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isCaged Boolean @default(false)
  
  // 關聯
  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])
  
  // 健康紀錄
  healthRecords HealthRecord[]
  medicalRecords MedicalRecord[]
}

model HealthRecord {
  id        String   @id @default(cuid())
  weight    Float?
  height    Float?
  temperature Float?
  notes     String?
  recordedAt DateTime @default(now())
  
  // 關聯
  catId String
  cat   Cat    @relation(fields: [catId], references: [id])
}

model MedicalRecord {
  id          String   @id @default(cuid())
  title       String
  description String?
  diagnosis   String?
  treatment   String?
  medicationType String  // Type of medication
  medicationNotes String? // Special instructions for medication
  veterinarian String?
  visitDate   DateTime
  nextVisit   DateTime?
  cost        Float?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Medication administration records
  medicationRecords MedicationRecord[]
  
  // 關聯
  catId String
  cat   Cat    @relation(fields: [catId], references: [id])
}

model MedicationRecord {
  id          String   @id @default(cuid())
  date        DateTime @default(now())
  volunteer   String   // Volunteer who administered the medication
  morningDose Boolean  @default(false) // Morning medication given
  eveningDose Boolean  @default(false) // Evening medication given
  notes       String?
  
  // Relation to medical record
  medicalRecordId String
  medicalRecord   MedicalRecord @relation(fields: [medicalRecordId], references: [id])
}
