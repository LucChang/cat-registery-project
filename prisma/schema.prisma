// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cats      Cat[]
}

model Cat {
  id          String   @id @default(cuid())
  name        String
  breed       String?
  color       String?
  gender      String?
  birthDate   DateTime?
  description String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isCaged Boolean @default(false)
  
  // 關聯
  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])
  
  // 健康紀錄
  healthRecords HealthRecord[]
  medicalRecords MedicalRecord[]
  catMedications CatMedication[]
}

model HealthRecord {
  id        String   @id @default(cuid())
  date      String   // 日期
  timeSlot  String   // 時段（早上/下午/晚上）
  dryFood   String   // 乾食狀況
  stool     String   // 大便狀況
  urine     String   // 尿尿狀況
  vomiting  String   // 嘔吐狀況
  cough     String   // 咳嗽狀況
  symptoms  String   // 症狀描述
  behavior  String?  // 行為觀察（可選）
  notes     String?  // 備註（可選）
  recordedAt DateTime @default(now())
  
  // 關聯
  catId String
  cat   Cat    @relation(fields: [catId], references: [id])
}

model MedicalRecord {
  id          String   @id @default(cuid())
  title       String   // 記錄標題
  date        DateTime // 診療日期
  veterinarian String  // 獸醫師
  diagnosis   String   // 診斷結果
  treatment   String   // 治療方案
  cost        Float?   // 診療費用
  medication  String   // 用藥資訊
  notes       String?
  createdAt   DateTime @default(now())
  
  // 關聯
  catId String
  cat   Cat    @relation(fields: [catId], references: [id])
  
  // 用藥紀錄
  medicationRecords MedicationRecord[]
}

model MedicationRecord {
  id          String   @id @default(cuid())
  date        DateTime @default(now())
  volunteer   String   // 給藥的志工
  morningDose Boolean  @default(false) // 早上給藥
  eveningDose Boolean  @default(false) // 晚上給藥
  notes       String?
  
  // 關聯到醫療紀錄
  medicalRecordId String
  medicalRecord   MedicalRecord @relation(fields: [medicalRecordId], references: [id])
}

model CatMedication {
  id            String   @id @default(cuid())
  medicationName String  // 藥物名稱
  dosage        String?  // 劑量
  frequency     String   @default("每日") // 用藥頻率
  morning       Boolean  @default(false) // 早上
  afternoon     Boolean  @default(false) // 下午
  evening       Boolean  @default(false) // 晚上
  night         Boolean  @default(false) // 睡前
  startDate     DateTime // 開始日期
  endDate       DateTime // 到期日期
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // 關聯到貓咪
  catId String
  cat   Cat    @relation(fields: [catId], references: [id])
}
